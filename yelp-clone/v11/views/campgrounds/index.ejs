<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to the OpenCamps page.</h1>
        <p>Some of our favorite picks for you.</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Camp Site</a>
        </p>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">

        <% campgrounds.forEach(function(campground){ %>
            <div class="card col-md-3 col-sm-6">
                <img id="index-image" class="img-thumbnail" src="<%= campground.image%>" alt="">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary"> More Info</a>
                </p>
            </div>

        <% }); %>
    </div>
    
    
</div>



<% include ../partials/footer %>